---
import "./primary-nav.css";
---
<header class="primary-nav">
    <div>
        <a href="/">Death or Glory<br/> Training Club</a>
    </div>
    <nav class="primary-mobile-nav" data-mobile-active="false">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/memberships">Memberships</a></li>
            <li><a href="/classes">Classes</a></li>
            <li><a href="/timetable">Timetable</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
    </nav> 

    <div class="cta">
        <a class="btn" href="https://wa.me/+447876495711">Book Taster</a>
        <buttpn id="mobile-menu-btn" class="btn" data-variant="outlined" data-mobile-active="false">
            <ion-icon name="menu" class="menu"></ion-icon>
            <ion-icon name="close" class="close"></ion-icon>
        </buttpn>
    </div>
</header>


<script>
    const menuButton = document.querySelector("#mobile-menu-btn");
    const menu = document.querySelector("nav[data-mobile-active]");

    menuButton?.addEventListener("click", () => {
        const state =  menu?.getAttribute("data-mobile-active") === "false" ? "true" : "false"
        menu?.setAttribute("data-mobile-active", state.toString())
        menuButton?.setAttribute("data-mobile-active", state.toString())
    })
</script>