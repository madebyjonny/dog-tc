---
import "./home-classes.css";
import ContentCard from "../link-content-card/link-content-card.astro";
import { Image } from "astro:assets";
import CrossFit from "../../assets/crossfit.webp";
import Hyrox from "../../assets/hyrox.webp";
import Strength from "../../assets/strength.webp";

type ClassType = {
  title: string;
  href: string;
  imageURL: string;
  description: string;
};

const classes: ClassType[] = [
  {
    title: "CrossFit",
    imageURL: "/crossfit.webp",
    href: "/classes#crossfit",
    description:
      "Our main class. A constantly varied high intensity workout that will keep you on your toes.",
  },
  {
    title: "Hyrox",
    imageURL: "/hyrox.webp",
    href: "/classes#hyrox",
    description:
      "HYROX combines both running & functional workout stations.",
  },
  {
    title: "Strength and Conditioning",
    imageURL: "/strength.webp",
    href: "/classes#strength-and-conditioning",
    description:
      "Strength and Conditioning (S&C) is the selection and development of dynamic/static exercises used to improve physical performance.",
  },
];
---

<article class="classes">
  <header>
    <h2>Our Classes</h2>
    <a href="/classes" class="btn" data-variant="outlined">Find out more</a>
  </header>
  <ul role="list" class="class-list">
    {
      classes.map((cls) => (
        <li>
          <ContentCard
            title={cls.title}
            description={cls.description}
            href={cls.href}
            imageURL={cls.imageURL}
          />
        </li>
      ))
    }
  </ul>
</article>
