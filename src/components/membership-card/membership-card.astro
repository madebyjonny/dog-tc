---
import "./membership-card.css";
const { title, price, url, description, isPopular, oneOff = false } = Astro.props as {
  title: string;
  description: string;
  price: string;
  url: string;
  isPopular: boolean;
  oneOff: Boolean
};
---

<section class="membership-card">
  <header class="membership-card__header">
    <div class="membership-card__headline">
      <h2>{title}</h2>
      {isPopular && <span class="pill">Popular</span>}
    </div>
    <p class="membership-card__description">
      {description}
    </p>
  </header>

  <footer class="membership-card__footer">
    <div class="membership-card__price">
      {price} {!oneOff && <span class="membership-card__duration">/per month</span>}
    </div>
    
    <a class="btn" data-disabled={url === undefined} href={url} target="__blank" data-variant="outlined" 
      >{url ? "Sign Up" : "Coming Soon"}</a
    >
  </footer>
</section>
